%table.event_list
  %tr{:align => "center"}
    %th Name:
    %th Gender:
    %th Type:
    %th Description:
  - @events.each do |e|
    %tr
      %td= link_to e.name, event_path(e)
      = image_tag(e.photo.url(:medium))
      %td= e.gender
      %td
        - e.tags.each do |t|
          =t.name
      %td= e.description
      %td= link_to "unfollow", unfollow_event_path(e)
= paginate @events