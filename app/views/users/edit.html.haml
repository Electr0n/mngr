.content
  .sub_header
    Edit
  = form_for @user do |f|
    .form-group
      = f.label :name, class: 'col-sm-1 control-label'
      .col-sm-5
        = f.text_field :name, autofocus: true, class: 'form-control'
      %br
    .form-group
      = f.label :surname, class: 'col-sm-1 control-label'
      .col-sm-5
        = f.text_field :surname, class: 'form-control'
      %br
    .form-group
      = f.label :email, class: 'col-sm-1 control-label'
      .col-sm-5
        = f.email_field :email, class: 'form-control'
      %br
    .form-group
      = f.label :birthday, class: 'col-sm-1 control-label'
      .col-sm-5.date-select
        = f.date_select(:bday, start_year: 1940, end_year: Time.now.year)
      %br
    .form-group
      = f.label :gender, class: 'col-sm-1 control-label'
      .col-sm-5
        = radio_button("user", "gender", "Male")
        = label_tag :gender, "Male"
        = radio_button("user", "gender", "Female")
        = label_tag :gender, "Female"
        = radio_button("user", "gender", "NA")
        = label_tag :gender, "Not sure"
      %br
    .form-group
      = f.label :country, class: 'col-sm-1 control-label'
      .col-sm-5
        = f.country_select :country, priority: %w(BY RU UA), prompt: 'Please select a country'
      %br
    .form-group
      = f.label :city, class: 'col-sm-1 control-label'
      .col-sm-5
        = render partial: 'subregion_select', locals: {parent_region: f.object.country}
      %br
    .form-group
      = f.label :phone, class: 'col-sm-1 control-label'
      .col-sm-5
        = telephone_field("user", "phone", class: 'form-control')
      %br
    :javascript
      $(function() {
        $( "#sortable1, #sortable2" ).sortable({
          connectWith: ".connectedSortable"
        }).disableSelection();
        $(function() {
          $('.edit_user').submit(function() {
              tag_list = document.getElementById("sortable1");
              var element = tag_list.children;
              var tags = [];
              for (var i = 0; i < element.length; i++) {
                tags += element[i].innerHTML;
                tags += ",";
              }
              document.getElementById("user_tags").value = tags;
              return true;
            });
        });
      });
    .form-group
      = f.label :tags, class: 'col-sm-1 control-label'
      .col-sm-11
        %ul#sortable1.connectedSortable
          - @user.tags.each do |t|
            %li.ui-state-default #{t.name}
        %ul#sortable2.connectedSortable
          - (@tags-@user.tags).each do |t|
            %li.ui-state-highlight #{t.name}
        = f.hidden_field :tags
    %br
    .form-group
      = f.label :hobby, class: 'col-sm-1 control-label'
      .col-sm-5
        = f.text_area :hobby, class: 'form-control'
      %br
      %br
      %br
      %br
      %br
      %br
      %br
      %br
      %br
      %br
    .form-group
      = f.label :about, class: 'col-sm-1 control-label'
      .col-sm-5
        = f.text_area :about, class: 'form-control'
      %br
      %br
      %br
    .form-group
      = f.label :password, class: 'col-sm-1 control-label'
      .col-sm-5
        = f.password_field :password, autocomplete: "off", class: 'form-control'
      %br
    .form-group
      = f.label :avatar, class: 'col-sm-1 control-label'
      .col-sm-5
        = f.file_field :avatar
      %br
    .form-group
      = f.submit "Update", class: "btn btn-confirm"
  %br
  %br
  %br
  = button_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn"
  = link_to "Back", :back