.user_avatar
  = image_tag(@event.owners.first.avatar.url(:thumb))
  = image_tag(@event.photo.url(:thumb))
.sub_header
  = @event.name
.user_info
  .col-1
    Date:
  .col-2
    = @event.date
  .col-1
    Time:
  .col-2
    = @event.time
  .col-1
    Gender:
  .col-2
    = @event.gender
  .col-1
    Number:
  .col-2
    = number(@event.number)
  .col-1
    Age:
  .col-2
    = age_range(@event.agemin, @event.agemax)
  .col-1
    Description:
  .col-2
    = @event.description
  .col-1
    Tags:
  .col-2
    = tags_list(@event.tags)
= follow_event_button
= edit_event_button
= delete_event_button
