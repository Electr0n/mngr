!!!
%html
  %head
    %title Mngr
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %script{:src => "//code.jquery.com/ui/1.11.4/jquery-ui.js"}
    %script{:src => 'https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js'}
    %script{:src => "//maps.google.com/maps/api/js?key=AIzaSyCg3tpHZzNzF1JWKOruUBy3PrOksKDRvII&callback=initMap"}
    %script{:src => "//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"}
    %script{:src => "//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js", :type => "text/javascript"}
    %script{:src => "//cdn.rawgit.com/googlemaps/js-rich-marker/gh-pages/src/richmarker-compiled.js", :type => "text/javascript"}
    %script{:src => "//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js", :type => "text/javascript"}

    = csrf_meta_tags
  %body
    .content_wrapper
      .main_header
        - unless current_user.nil?
          = render partial: 'dashboard' if current_user.superadmin? || current_user.admin?
        .logo
        .account_links
          = render partial: 'account_links'
      - if notice
        %p.alert.alert-success= notice
      - if alert
        %p.alert.alert-danger= alert
      .control_panel
        = render partial: 'cp'
      .left_side
        .banner.box2
          %p BANNER №1
        .banner.box3
          %p BANNER №2
      .right_side
        .banner.box1
          %p EVENT'S VIDGET
        .banner.box3
          %p BANNER №3
      .content
        = yield
      .divider_f
    .footer
      %p footer