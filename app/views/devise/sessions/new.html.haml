.hello_form
  %h2 Log in
  = form_for(resource, as: resource_name, class: 'form-horizontal', url: session_path(resource_name)) do |f|
    .form-group.line
      = f.label :email, class: 'col-sm-2 control-label margin_label'
      .col-sm-10
        = f.email_field :email, placeholder: "Email", autofocus: true, class: 'form-control'
    .form-group.line
      = f.label :password, class: 'col-sm-2 control-label margin_label'
      .col-sm-10
        = f.password_field :password, placeholder: "Enter your password here", autocomplete: "off", class: 'form-control'
    - if devise_mapping.rememberable?
      .form-group.line
        .col-sm-offset-2.col-sm-10
          .checkbox.margin_remember
            = f.check_box :remember_me
            = f.label :remember_me
    .form-group.line
      .col-sm-offset-2.col-sm-10
        = f.submit "Log in", class: 'btn btn-default'
.hello_form.sign_with
  = render "devise/shared/links"